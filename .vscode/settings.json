{
  // Vue 3 + Volar Configuration (Modern approach)
  "vue.codeActions.enabled": true,
  "vue.complete.casing.props": "kebab",
  "vue.complete.casing.tags": "kebab",
  "vue.updateImportsOnFileMove.enabled": true,
  
  // TypeScript/JavaScript Configuration
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,
  
  // ESLint Configuration for Frontend
  "eslint.workingDirectories": [
    "frontend"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "vue"
  ],
  
  // File Associations
  "files.associations": {
    "*.vue": "vue"
  },
  
  // Python Configuration for Backend
  "python.defaultInterpreterPath": "/opt/homebrew/opt/python@3.10/libexec/bin/python",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.formatting.provider": "black",
  
  // General Editor Settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  
  // Disable Vetur if installed (deprecated)
  "vetur.validation.template": false,
  "vetur.validation.style": false,
  "vetur.validation.script": false
} 